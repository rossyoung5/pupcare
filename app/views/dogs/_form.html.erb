<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob %>
    <%= f.association :breed %>
    <%= f.input :med_conditions %>
    <%= f.association :vet %>
    <%= f.input :daycare_resident %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
