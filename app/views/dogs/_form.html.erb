<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :dob, as: :date, start_year: Date.today.year - 25,
                      end_year: Date.today.year,
                      order: [:month, :day, :year],
                      label: "Date of Birth" %>
    <%= f.association :breed %>
    <%= f.input :med_conditions %>
    <%= f.association :vet, collection: Vet.order(:doctor), label_method: :vet_clinic %>
    <%= f.input :daycare_resident %>
    <%# TODO: add owner association  %>
    <%= f.association :owner collection: Owner.order(:last_name), label_method: :owner_full %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
